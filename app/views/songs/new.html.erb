<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <ul>
    <%= f.label :title %>
    <li> <%= f.text_field :title %> </li>
    <br />
    <%= f.label :artist %>
    <li> <%= f.text_field :artist_name %> </li>
    <br />
    <%= f.label "Genres:" %>
    <li> <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: true %> <br> </li>
    <br />

    <ul>
      <li> <input name="song[note_contents][]" id="song_notes_1"> </li>
      <li> <input name="song[note_contents][]" id="song_notes_2"> </li>
      <li> <input name="song[note_contents][]" id="song_notes_3"> </li>
    </ul>

    <br />
    <%= f.submit %>
  </ul>
<% end %>


